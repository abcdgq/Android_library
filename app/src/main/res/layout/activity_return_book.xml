<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_return_book_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"

            android:text="图书信息"
            android:textSize="25sp" />



        <LinearLayout
            android:id="@+id/ll_return_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_return_book_welcome"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_return_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="图书编号"
                android:textSize="18sp" />  <!-- 这里设置字体大小 -->

            <TextView
                android:id="@+id/tv_return_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="图书名称"
                android:textSize="18sp" />  <!-- 这里设置字体大小 -->

        </LinearLayout>

<!--        <ListView-->
<!--            android:id="@+id/lv_find_book"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_below="@id/ll_find_book_title"-->
<!--            android:layout_marginTop="18dp"-->
<!--            android:textSize="18sp" />-->


    </LinearLayout>


</RelativeLayout>
